# ==============================================
# TIP Frontend - Environment Configuration Example
# ==============================================
# Copy this file to .env.local and fill in your actual values

# ==============================================
# SUPABASE
# ==============================================
# Get these from https://supabase.com/dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-side only (for API routes and server components)
# ⚠️ NEVER expose this to the browser
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NEXT_PUBLIC_APP_NAME=TIP
NEXT_PUBLIC_APP_VERSION=1.0.0

# Frontend App URL (used for OAuth redirects and email callbacks)
# Local: http://localhost:3000
# Production: https://your-vercel-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API URL
# Local: http://localhost:8000
# Production: https://tip-travel-intelligence-and-planner-production.up.railway.app
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ==============================================
# MAPBOX
# ==============================================
# Get your free API key from https://account.mapbox.com/access-tokens/
# Free tier: 50,000 map loads per month
NEXT_PUBLIC_MAPBOX_TOKEN=sk.eyJ1IjoibXNoYWZlaTcyMSIsImEiOiJjbWpsYTB2NHAwZzN6M2lzNjRrNHRnODZwIn0.sKRAyoYQOMsLTXaDbj4umg

# ==============================================
# FEATURE FLAGS
# ==============================================
NEXT_PUBLIC_FEATURE_DASHBOARD_HOME=true
NEXT_PUBLIC_FEATURE_RECOMMENDATIONS=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# Development mode
NODE_ENV=development

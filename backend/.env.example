# ==============================================
# TIP Backend - Environment Variables
# ==============================================

# Application
APP_NAME=TIP
APP_VERSION=1.0.0
ENVIRONMENT=development

# API
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Supabase (get these from https://supabase.com/dashboard)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Redis & Celery (local development)
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-use-strong-random-string
SESSION_LIFETIME_HOURS=24
RATE_LIMIT_PER_MINUTE=60

# Application Settings
TRIP_DATA_RETENTION_DAYS=30
GDPR_ENABLED=true
LOG_LEVEL=INFO

# Feature Flags
FEATURE_DASHBOARD_HOME=true
FEATURE_RECOMMENDATIONS=true
FEATURE_ANALYTICS=true

# ==============================================
# External APIs
# ==============================================

# RapidAPI (shared key for multiple services)
# Get from https://rapidapi.com/
RAPIDAPI_KEY=your-rapidapi-key-here

# Anthropic Claude API - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# -----------------------------
# Weather APIs
# -----------------------------
# WeatherAPI - Get from https://www.weatherapi.com/signup.aspx (Free plan: 1M calls/month)
WEATHERAPI_KEY=your-weatherapi-key-here

# Visual Crossing - Get from https://www.visualcrossing.com/sign-up (Free: 1K records/day)
VISUAL_CROSSING_API_KEY=your-visual-crossing-key-here

# -----------------------------
# Flight APIs
# -----------------------------
# Skyscanner via RapidAPI - Uses RAPIDAPI_KEY above
# API: https://rapidapi.com/3b-data-3b-data-default/api/sky-scanner3
SKYSCANNER_API_KEY=

# Amadeus (optional, enterprise) - Get from https://developers.amadeus.com/
AMADEUS_API_KEY=
AMADEUS_API_SECRET=

# -----------------------------
# Map & Attractions
# -----------------------------
# Mapbox - Get from https://account.mapbox.com/ (Free: 50K loads/month)
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# OpenTripMap - Get from https://opentripmap.io/product (Free tier available)
OPENTRIPMAP_API_KEY=your-opentripmap-key-here

# -----------------------------
# Visa APIs (alternatives)
# -----------------------------
# Sherpa API (enterprise) - Contact https://joinsherpa.com/
SHERPA_API_KEY=
